<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guia de Precios"
        android:textAlignment="center"
        android:textSize="30sp"/>
    <ImageView
        android:layout_width="254dp"
        android:layout_height="254dp"
        android:layout_gravity="center"
        android:src="@drawable/auto"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Escribre el numero de telefono"
        android:id="@+id/telefono"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="AUTO HYUNDAI SANTAFE"
        android:id="@+id/mensaje"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:textAlignment="center"
        android:id="@+id/enviar"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver Permisos"
        android:id="@+id/permisos"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nota: Para una mejor experiencia, envie el mensaje desde otro telefono\n"/>


</LinearLayout>